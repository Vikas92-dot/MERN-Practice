<html>
  <head>
    <%- include("__bootstrap.ejs") %>
  </head>
  <body>
    <section class="vh-100" style="background-color: #1c2331;">
      <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="card p-4 shadow-lg rounded-3" style="width: 30%; background-color: #f5f7fa;">
          <h3 class="text-center text-dark fw-bold mb-4">Task Management (Admin)</h3>
          <form method="post" action="/admin/sign-in">

            <div class="form-group mb-3">
              <label for="email" class="form-label text-dark">Email</label>
              <input class="form-control" name="email" type="email" id="email" placeholder="Enter email id" required />
            </div>

            <div class="form-group mb-4">
              <label for="password" class="form-label text-dark">Password</label>
              <input name="password" type="password" id="password" placeholder="Enter password" class="form-control" required />
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-block mb-3">Sign In</button>
            </div>
            <div class="mt-3 d-flex justify-content-center">
              <span>Login as an user? <a class="text-decoration-none"  href="/user/sign-in"> USER
              </a></span>
          </div>
          </form>
        </div>
      </div>
    </section>
  </body>
</html>
