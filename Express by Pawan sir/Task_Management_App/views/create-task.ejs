<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Assign Task</title>
    <%- include("__bootStrap.ejs") %>
    <style>
      body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
      }
      .task-form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
      }
      .task-form {
        max-width: 800px;
        width: 100%;
        background: #ffffff;
        padding: 30px;
        border-radius: 16px;
        box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.1);
      }
      .form-group {
        margin-bottom: 20px;
      }
      .form-control {
        border-radius: 8px;
        padding: 5px;
        font-size: 16px;
      }
      label {
        font-weight: bold;
        margin-bottom: 8px;
        display: block;
      }
      .btn-success {
        width: 100%;
        font-size: 18px;
        padding: 12px;
        border-radius: 8px;
        background-color: #28a745;
        color: white;
        transition: all 0.3s;
      }
      .btn-success:hover {
        background-color: #218838;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
      }
      h3 {
        text-align: center;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 30px;
      }
    </style>
  </head>
  <body>
    <%- include("__header.ejs")%>

    <div class="task-form-container">
      <div class="task-form">
        <h3>Assign a Task</h3>
        <form action="/task/create-task" method="post">
          <!-- Task Title -->
          <div class="form-group">
            <label>Task Title</label>
            <input name="title" class="form-control" type="text" placeholder="Enter task title" required />
          </div>

          <!-- Task Description -->
          <div class="form-group">
            <label>Task Description</label>
            <textarea name="description" placeholder="Type here..." class="form-control" rows="4" required></textarea>
          </div>

          <!-- Task Priority -->
          <div class="form-group">
            <label>Task Priority</label>
            <select class="form-control" name="priorityId" required>
              <option disabled selected>Select task priority</option>
              <% for(let taskPriority of taskPriorities) { %>
                <option value="<%=taskPriority.id%>"><%=taskPriority.priority%></option>
              <% } %>    
            </select>
          </div>

          <!-- Select Domain -->
          <div class="form-group">
            <label>Select Domain</label>
            <select name="userId" class="form-control" required>
              <option disabled selected>Select domain</option>
              <% for(let role of allRoles) { %>
                <option value="<%= role.id %>"><%= role.role %></option>
              <% } %>
            </select>
          </div>

          <!-- Submit Button -->
          <button type="submit" class="btn btn-success">Next</button>
        </form>
      </div>
    </div>
  </body>
</html>
